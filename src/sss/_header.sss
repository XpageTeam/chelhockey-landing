.head
	display: flex
	padding: 60px 0

	&-cont
		position: absolute
		top: 0
		left: 0
		right: 0
		z-index: 10
		background: linear-gradient(180deg, #000000 0%, rgba(0, 0, 0, 0) 76.56%)

	svg
		display: block




.main-nav
	margin-left: auto

	&__list
		display: flex

	&__item

		&:not(:last-child)
			margin-right: 100px

		// &.active, &:hover
		// 	.main-nav__link
		// 		&:after
		// 			opacity: 1

	&__link
		position: relative
		color: #fff
		font-weight: 500
		padding: 20px 0
		line-height: 1
		font-size: em(18)

		&:after
			content: ''
			display: block
			position: absolute
			top: calc(100% - -22px)
			height: 3px
			width: 100%
			background-color: var(--main-color)
			opacity: 0
			transition: opacity .3s ease
			border-radius: 5px


@media (max-width: 1600px)

	.head
		padding: 25px 0

@media (max-width: 1500px)

	.main-nav__item:not(:last-child)
		margin-right: 45px


@media (max-width: 1000px)
	
	.main-nav
		display: none

@media (max-width: 660px)
	
	.head-logo
		width: 100%
		display: flex
		justify-content: center

		svg
			max-width: 200px
			height: 45px
