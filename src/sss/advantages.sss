.advantages
	display: flex
	align-items: center

	&-cont
		padding: 150px 0

	&__slider
		&-slider
			position: relative
			max-width: 700px

			img
				border-radius: 30px
				display: block

		&-info
			margin-left: 125px



		&-title
			font-weight: 500
			font-size: 34px
			line-height: 40px
			letter-spacing: 0.06em
			text-transform: uppercase
			margin-bottom: 50px


		.swiper-container-horizontal
			>
				.swiper-pagination-bullets
					top: calc(100% + 40px)
					bottom: auto

